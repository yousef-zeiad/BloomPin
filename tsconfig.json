{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["jest", "styled-components-react-native"],
    "typeRoots": ["./node_modules/@types", "./types.tsx"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES7"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "typings",
    "functions"
  ]
}
